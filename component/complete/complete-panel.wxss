/* complete-panel.wxss */
.end-modal {
  position: fixed;
}

.modal-header {
  width: 100%;
  text-align: center;
  font-size: 30px;
  font-weight: bold;
  color:rgb(159, 184, 138);
}

.modal-content {
  position: fixed;
  left: 0;
  right: 0;
  top:24%;
  margin: 0 auto;
  padding: 30px 0 20px;
  width: 90%;
  background-color: #fff;
  text-align: center;
  z-index: 2;
  border-radius: 5px;
  color:rgb(159, 184, 138);
}

.modal-content .score {
  font-size: 40px;
  font-weight: bold;
  margin-top: 12px;
}

.modal-content .restart {
  margin-top: 30px;
  width: 36%;
  height: 30px;
  line-height: 30px;
  color: #fff;
  outline: none;
  border: none;
  border-radius: 15px;
  background-color: rgb(159, 184, 138);
}

.end-modal:before {
  position: fixed;
  content: '';
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
  background-color: rgba(0,0,0,.12);
}