.phrases-con{
  position: relative;
}

.phrases-desc-left{
  padding-bottom: 30rpx;
  position: relative;
}
.phrases-desc-left .phrases-desc-icon-con{
  width: 80rpx;
  height: 80rpx;
  position: relative;
  display:inline-block;
}
.phrases-desc-icon{
  position: absolute;
  width: 80rpx;
  height: 80rpx;
  left: 0rpx;
  top: 0rpx;
}
.phrases-desc-left .phrases-desc-con{
  border: solid 1rpx #ccc;
  border-radius: 10rpx;
  display:inline-block;
  padding:15rpx 20rpx;
  vertical-align:top;
  margin-left:25rpx;
  position: relative;
  background-color: #fff;
}
.phrases-desc-left .phrases-desc-con:before{
  content: "";  
  display: block;  
  position: absolute;
  transform:rotate(-45deg);  
  top: 25rpx;  
  left: -12rpx;  
  height: 20rpx;  
  width: 20rpx;  
  border-left: solid 1rpx #ccc;
  border-top: solid 1rpx #ccc; 
  background-color: #fff;
}
.phrases-desc-text{
  font-size: 32rpx;
  display: block;
}
.phrases-desc-right{
  padding-bottom: 30rpx;
  position: relative;
  overflow:hidden;
}
.phrases-desc-right .phrases-desc-icon-con{
  width: 80rpx;
  height: 80rpx;
  position: relative;
  background-color: #fff;
  float: right;
}
.phrases-desc-right .phrases-desc-con{
  border: solid 1rpx #ccc;
  border-radius: 10rpx;
  padding:15rpx 20rpx;
  vertical-align:top;
  position: relative;
  background-color: #fff;
  float: right;
  margin-right: 25rpx;
}
.phrases-desc-right .phrases-desc-con:before{
  content: "";  
  display: block;  
  position: absolute;
  transform:rotate(45deg);  
  top: 25rpx;  
  right: -12rpx;  
  height: 20rpx;  
  width: 20rpx;  
  border-right: solid 1rpx #ccc;
  border-top: solid 1rpx #ccc; 
  background-color: #fff;
}
