.list {
  height: 100%;
  margin-top: 90rpx;
}
.list .item {
  display: flex;
  padding: 20rpx 40rpx;
  border-bottom: 1rpx solid #eee;
  cursor: pointer;
}
.list .item .cover {
  width: 150rpx;
  height: 225rpx;
  margin-right: 20rpx;
}
.list .item .meta {
  flex: 1;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.list .item .meta .title,
.list .item .meta .sub-title {
  display: block;
  margin-bottom: 15rpx;
}
.list .item .meta .title {
  font-size: 32rpx;
}
.list .item .meta .sub-title {
  font-size: 22rpx;
  color: #c0c0c0;
}